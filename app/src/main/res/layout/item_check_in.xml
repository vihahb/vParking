<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_1"
    android:background="@android:color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/size_8"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:paddingTop="@dimen/size_8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_dot_gray"
        android:drawableStart="@mipmap/ic_dot_gray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/item_view_check_in_textview"
            android:id="@+id/item_txt_check_in_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ô tô của mình" />

        <TextView
            android:id="@+id/item.txt_check_in_made_by"
            style="@style/item_view_check_in_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:text="Honda" />
    </LinearLayout>

    <TextView
        android:id="@+id/item.txt_check_in_car_number_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"
        android:gravity="end|right"
        android:text="3025-3260" />

    <TextView
        android:id="@+id/item.txt_check_in_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"
        android:drawableEnd="@mipmap/ic_arrow_right_24dp"
        android:drawableRight="@mipmap/ic_arrow_right_24dp" />
</LinearLayout>