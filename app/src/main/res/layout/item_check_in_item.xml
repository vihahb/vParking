<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/size_8"
    android:paddingEnd="@dimen/size_16"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:paddingStart="@dimen/size_16"
    android:layout_marginBottom="@dimen/size_1"
    android:paddingTop="@dimen/size_8">

    <TextView
        android:id="@+id/item_txt_check_in_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_directions_bike_black_24dp"
        android:drawableRight="@drawable/ic_directions_bike_black_24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_txt_check_in_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ô tô của mình" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_txt_check_in_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honda" />

            <TextView
                android:id="@+id/item_txt_check_in_car_number_plate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_marginStart="@dimen/size_8"
                android:layout_weight="1"
                android:gravity="end|right"
                android:text="3025-3260" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>